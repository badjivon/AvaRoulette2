<% randava = nil %>
<% avaSelecto = [] %>
<% proba = rand(1..100) %>

<% if proba <= 60 %>
  <% avaSelecto = @avas.select { |ava| ava.rare == "commune"} %>
  <% randava = avaSelecto.sample %>
<% elsif proba <= 85 %>
  <% avaSelecto = @avas.select { |ava| ava.rare == "rare"} %>
  <% randava = avaSelecto.sample %>
<% elsif proba <= 95 %>
  <% avaSelecto = @avas.select { |ava| ava.rare == "epique"} %>
  <% randava = avaSelecto.sample %>
<% else %>
  <% avaSelecto = @avas.select { |ava| ava.rare == "legendaire"} %>
  <% randava = avaSelecto.sample %>
<% end %>

<% randava.drop += 1 %>
<% randava.save %>

<div class="m-3 card-category <%= randava.rare %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path randava.photo.key, height: 300, crop: :fill %>')">
