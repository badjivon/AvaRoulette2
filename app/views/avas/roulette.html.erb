<% roulette = rand(1..@avas.length) %>
<% randava = nil %>

<% while randava == nil %>
  <% proba = rand(1..500) %>
  <% if proba > 498 %>
    <% randava = @avas.find { |ava| ava.id == roulette && ava.rare == "Épique"} %>
  <% elsif proba <= 400 %>
    <% randava = @avas.find { |ava| ava.id == roulette && ava.rare == "Commune"} %>
  <% elsif proba <= 480 %>
    <% randava = @avas.find { |ava| ava.id == roulette && ava.rare != "Légendaire" && ava.rare != "Épique"} %>
  <% elsif proba <= 490 %>
    <% randava = @avas.find { |ava| ava.id == roulette && ava.rare != "Épique" } %>
  <% else %>
    <% randava = @avas.find { |ava| ava.id == roulette && ava.rare == "Commune"} %>
  <% end %>
  <% break if randava !=nil %>
<% end %>



<div class="m-3 card-category <%= randava.rare %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path randava.photo.key, height: 300, crop: :fill %>')">
