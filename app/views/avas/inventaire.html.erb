<div class="container mt-4">
  <h1 class="mb-4">🐈‍⬛ Inventaire de <%= params[:o] %> 🐈‍⬛</h1>
  <hr>

  <div class="m-2 mb-4">
    <% commune = @avas.select { |avacommune| avacommune.owner.include? "#{params[:o]}" } %>
    <div class="wrapper big-grid">
      <% commune.each do |ava| %>
        <%= link_to ava_path(ava) do %>
          <div class="card card-inventaire <%= ava.rare %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path ava.photo.key, height: 400, crop: :fill %>')"></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
